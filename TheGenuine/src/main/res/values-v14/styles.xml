<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Example</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.Example</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="ActionBarTabStyle.Example" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_holo</item>
    </style>

    <style name="ActionBarTabTextStyle.Example" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@drawable/apptheme_text_holo</item>
    </style>

    <style name="MyActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:homeAsUpIndicator">@drawable/ic_action_previous_item</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

</resources>
