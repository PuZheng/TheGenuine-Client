<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <ImageView
        android:layout_width="@dimen/image_view_list_item_width"
        android:layout_height="@dimen/image_view_list_item_height"
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:src="@drawable/content_picture"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@drawable/apptheme_btn_default_holo_light"
        android:textColor="@android:color/white"
        android:text="查看商家"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/mid"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView"
        android:layout_toLeftOf="@id/button"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:textSize="18dp"
            android:id="@+id/textViewProductName" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                style="@style/RatingBarSmallAppTheme"
                android:stepSize="0.5"
                android:id="@+id/ratingBar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建议价: ￥"
                android:includeFontPadding="false"
                android:textColor="#fc8c43"
                android:textSize="14dp"
                android:layout_toLeftOf="@+id/textViewPrice"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:includeFontPadding="false"
                android:textColor="#fc8c43"
                android:textSize="14dp"
                android:layout_alignParentRight="true"
                android:id="@+id/textViewPrice" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/darker_gray"
                android:text="人气100"
                android:includeFontPadding="false"
                android:id="@+id/textViewFavorCnt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDistance"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/darker_gray"
                android:text="100米"
                android:includeFontPadding="false"
                android:layout_gravity="right" />

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>