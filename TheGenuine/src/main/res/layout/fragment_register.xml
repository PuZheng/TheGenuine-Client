<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Register progress -->

    <LinearLayout
        android:id="@+id/register_status"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/register_status_message"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:fontFamily="sans-serif-light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/register_progressing" />
    </LinearLayout>

    <!-- Register form -->
    <ScrollView
        android:id="@+id/register_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/LoginFormContainer"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:background="@drawable/login_panel"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/imageView"
                        android:layout_centerVertical="true"
                        android:src="@drawable/account_black" />

                    <EditText
                        android:id="@+id/email"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="@string/enter_email"
                        android:layout_toRightOf="@id/imageView"
                        android:background="@null"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DBDBDB"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/imageView2"
                        android:layout_centerVertical="true"
                        android:src="@drawable/password" />

                    <EditText
                        android:id="@+id/password"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_password"
                        android:inputType="textPassword"
                        android:layout_toRightOf="@id/imageView2"
                        android:background="@null"
                        android:layout_centerInParent="true" />

                    <Switch
                        android:switchMinWidth="100dp"
                        android:layout_width="100dp"
                        android:layout_height="10dp"
                        android:id="@+id/switch1"
                        android:layout_toRightOf="@id/password"
                        android:textOn=""
                        android:textOff=""
                        android:thumb="@drawable/apptheme_switch_inner_holo_light"
                        android:track="@drawable/apptheme_switch_track_holo_light"
                        android:layout_centerVertical="true"
                        tools:ignore="NewApi" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DBDBDB"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/imageView3"
                        android:layout_centerVertical="true"
                        android:src="@drawable/password" />

                    <EditText
                        android:id="@+id/textPasswordConfirm"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:imeActionLabel="@string/action_register"
                        android:imeActionId="@+id/register"
                        android:imeOptions="actionGo"
                        android:background="@null"
                        android:layout_centerInParent="true"
                        android:hint="@string/action_enter_password_again"
                        android:layout_toRightOf="@id/imageView3"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_register"
                android:textSize="16dp"
                android:textColor="@android:color/primary_text_dark"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/apptheme_btn_default_holo_light" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

