<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="产品编号"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:text="id"
                android:id="@+id/textViewCode" />
        </TableRow>

        <TableRow android:layout_height="1px" android:background="#BDBDBD">
            <View android:layout_span="2" android:layout_height="1px"
                android:layout_width="fill_parent" android:text="">
            </View>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="产品名称"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:text="name"
                android:id="@+id/textViewName" />
        </TableRow>

        <TableRow android:layout_height="1px" android:background="#BDBDBD">
            <View android:layout_span="2" android:layout_height="1px"
                android:layout_width="fill_parent" android:text="">
            </View>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="生产厂家"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:text="manufacture"
                android:id="@+id/textViewVendorName" />
        </TableRow>

        <TableRow android:layout_height="1px" android:background="#BDBDBD">
            <View android:layout_span="2" android:layout_height="1px"
                android:layout_width="fill_parent" android:text="">
            </View>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="生产日期"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:text="manufacture date"
                android:id="@+id/textViewManufactureDate" />
        </TableRow>
        <TableRow android:layout_height="1px" android:background="#BDBDBD">
            <View android:layout_span="2" android:layout_height="1px"
                android:layout_width="fill_parent" android:text="">
            </View>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="保质期"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:text="manufacture date"
                android:id="@+id/textViewExpiredDate" />
        </TableRow>
        <TableRow android:layout_height="1px" android:background="#BDBDBD">
            <View android:layout_span="2" android:layout_height="1px"
                android:layout_width="fill_parent" android:text="">
            </View>
        </TableRow>
    </TableLayout>
</LinearLayout>