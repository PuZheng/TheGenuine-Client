<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/pid"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:text="id"
                android:id="@+id/textViewCode" />
        </TableRow>

        <TableRow
            android:layout_height="1px"
            android:background="#BDBDBD">

            <View
                android:layout_span="2"
                android:layout_height="1px"
                android:layout_width="fill_parent"
                android:text=""/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/pname"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:text="name"
                android:id="@+id/textViewName" />
        </TableRow>

        <TableRow
            android:layout_height="1px"
            android:background="#BDBDBD">

            <View
                android:layout_span="2"
                android:layout_height="1px"
                android:layout_width="fill_parent"
                android:text=""/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/verify_cnt"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <TextView
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/verifyCnt" />
        </TableRow>

        <TableRow
            android:layout_height="1px"
            android:background="#BDBDBD">

            <View
                android:layout_span="2"
                android:layout_height="1px"
                android:layout_width="fill_parent"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/last_verify"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <TextView
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lastVerifyTime" />

        </TableRow>

        <TableRow
            android:layout_height="1px"
            android:background="#BDBDBD">

            <View
                android:layout_span="2"
                android:layout_height="1px"
                android:layout_width="fill_parent"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/vendor"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:id="@+id/textViewVendorName" />
        </TableRow>

        <TableRow
            android:layout_height="1px"
            android:background="#BDBDBD">

            <View
                android:layout_span="2"
                android:layout_height="1px"
                android:layout_width="fill_parent"
                android:text=""/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/production_date"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:id="@+id/textViewManufactureDate" />
        </TableRow>

        <TableRow
            android:layout_height="1px"
            android:background="#BDBDBD">

            <View
                android:layout_span="2"
                android:layout_height="1px"
                android:layout_width="fill_parent"
                android:text=""/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/expiration_date"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:id="@+id/textViewExpiredDate" />
        </TableRow>

        <TableRow
            android:layout_height="1px"
            android:background="#BDBDBD">

            <View
                android:layout_span="2"
                android:layout_height="1px"
                android:layout_width="fill_parent"
                android:text=""/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/vendor_address"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:id="@+id/textViewVendorAddress" />
        </TableRow>

        <TableRow
            android:layout_height="1px"
            android:background="#BDBDBD">

            <View
                android:layout_span="2"
                android:layout_height="1px"
                android:layout_width="fill_parent"
                android:text="" />
        </TableRow>

        <TableRow
            android:id="@+id/call"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/telephone"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="7">

                <ImageView
                    android:src="@android:drawable/ic_menu_call"
                    android:id="@+id/VendorTelButton"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_toRightOf="@id/VendorTelButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textViewVendorTel" />

            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_height="1px"
            android:background="#BDBDBD">

            <View
                android:layout_span="2"
                android:layout_height="1px"
                android:layout_width="fill_parent"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:text="@string/website"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:id="@+id/textViewVendorWebsite" />
        </TableRow>

        <TableRow
            android:layout_height="1px"
            android:background="#BDBDBD">

            <View
                android:layout_span="2"
                android:layout_height="1px"
                android:layout_width="fill_parent"
                android:text="" />
        </TableRow>
    </TableLayout>
</ScrollView>