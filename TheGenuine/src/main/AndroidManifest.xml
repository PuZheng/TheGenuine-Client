<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.puzheng.the_genuine"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <permission android:name="android.permission.BAIDU_LOCATION_SERVICE" />

    <uses-permission android:name="android.permission.BAIDU_LOCATION_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_GPS" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:name="com.puzheng.the_genuine.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />
        <service android:name=".BaiduMapService" />

        <activity
            android:name="com.puzheng.the_genuine.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!--
                <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain" />
            </intent-filter>
            -->

            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />

            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SPUActivity"
            android:theme="@style/WithUpIndicatorTheme"
            android:label="@string/title_activity_spu"
            android:screenOrientation="portrait"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name="com.puzheng.the_genuine.CounterfeitActivity"
            android:theme="@style/WithUpIndicatorTheme"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_counterfeit"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.puzheng.the_genuine.NearbyActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:label="NeighborhoodActivity" />
        <activity
            android:name="com.umeng.socialize.view.ShareActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:theme="@style/Theme.UMDialog"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name="com.tencent.tauth.AuthActivity" />

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="5295e18156240b7c6f01eadb" />

        <activity
            android:name="com.puzheng.the_genuine.CategoriesActivity"
            android:launchMode="singleTask"
            android:label="@string/title_activity_categories"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.puzheng.the_genuine.CommentsActivity"
            android:theme="@style/WithUpIndicatorTheme"
            android:label="@string/title_activity_comments"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CommentActivity"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:theme="@style/WithUpIndicatorTheme"
            android:label="@string/CommentActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.puzheng.the_genuine.AccountSettingsActivity"
            android:launchMode="singleTask"
            android:label="@string/title_activity_account_settings"
            android:screenOrientation="portrait" />
        <activity
            android:windowSoftInputMode="adjustPan|adjustResize|stateVisible"
            android:name="com.puzheng.the_genuine.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />

        <activity
            android:windowSoftInputMode="adjustPan|adjustResize|stateVisible"
            android:name="com.puzheng.the_genuine.RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait" />

        <activity
            android:name=".search.SearchActivity"
            android:label="@string/search_product"
            android:theme="@style/WithUpIndicatorTheme"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity
            android:name=".SPUListActivity"
            android:theme="@style/WithUpIndicatorTheme"
            android:label="@string/ProductListActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.puzheng.the_genuine.FavorCategoriesActivity"
            android:launchMode="singleTask"
            android:label="@string/title_activity_favor"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="android.app.default_searchable"
            android:value="com.puzheng.the_genuine.search.SearchActivity" />

        <provider
            android:authorities="com.puzheng.the_genuine.search.RecentSearchSuggestionProvider"
            android:name=".search.SearchSuggestionsProvider" />
    </application>

</manifest>
